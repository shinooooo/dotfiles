{
    "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "javascript.jsx",
    "vue",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "typescript.tsx"
  ],
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "rust",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "graphql"
  ]
}
